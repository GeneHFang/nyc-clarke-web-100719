<h1>Edit <%= @cat.name%></h1>

<form action="/cats/<%=@cat.id%>" method='POST'>
  <input type="hidden" name="_method" value="PATCH">
  <input type="text" name="cat[name]" placeholder="Name" value="<%=@cat.name%>" >
  <input type="text" name="cat[breed]" placeholder="Breed" value="<%=@cat.breed%>">
  <input type="number" name="cat[age]" placeholder="Age" value="<%=@cat.age%>">
  <input type="submit" value="Edit Cat">
</form>